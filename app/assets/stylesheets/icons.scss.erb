@font-face {
  font-family: 'icomoon';
  src:  url(<%= asset_url('icomoon.eot') %>);
  src:  url(<%= asset_url('icomoon.eot') %>) format('embedded-opentype'),
    url(<%= asset_url('icomoon.ttf') %>) format('truetype'),
    url(<%= asset_url('icomoon.woff') %>) format('woff'),
    url(<%= asset_url('icomoon.svg') %>) format('svg');
  font-weight: normal;
  font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
  /* use !important to prevent issues with browser extensions that change fonts */
  font-family: 'icomoon' !important;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;

  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-edit:before {
  content: "\e905";
}
.icon-copy:before {
  content: "\e925";
}
.icon-search:before {
  content: "\e986";
}
.icon-delete:before {
  content: "\e9ac";
}
.icon-view:before {
  content: "\e9ce";
}
.icon-plus:before {
  content: "\ea0a";
}
.icon-check:before {
  content: "\ea10";
}
