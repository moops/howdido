<%= form_tag(athletes_path, :method => "post") do %>
  
  <%= label_tag :first_name %><%= text_field_tag :first_name %><br/>
  <%= label_tag :last_name %><%= text_field_tag :last_name %><br/>
  <%= label_tag :user_name %><%= text_field_tag :user_name %><br/>
  <%= label_tag :gender %><%= select_tag(:gender, @genders.collect {|l| [ l.description, l.id ] }, { :include_blank => true }) %><br/>
  <%= label_tag :city %><%= text_field_tag :city %><br/>
  <%= label_tag :born_on %><%= text_field_tag :born_on, '', {:class => 'calendar'} %><br/>

  <div class="actions">
    <%= submit_tag %>
  </div>
<% end %>
