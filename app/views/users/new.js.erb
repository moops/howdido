$('#register-form').html("<%= escape_javascript(render(partial: 'form')) %>").modal('show');
$('#user_born_on').datepicker();

validate('new_user', {
    'user[first_name]': "required",
    'user[last_name]': "required",
    'user[email]': {
        required: true,
        email: true
    },
    'user[born_on]': "required",
    'user[password]': {
       required: true,
       minlength: 5
    },
    'user[password_confirmation]': {
      minlength: 5,
      equalTo: '#user_password'
    }
});
