$('#race-form').html("<%= escape_javascript(render(:partial => 'form')) %>").modal('show');
$('#race_race_on').datepicker();

validate('race-form', {
  'race[name]': "required",
  'race[race_on]': "required"
});
  
$('#other_distance').parent().hide();
$('select#race_distance').change(function() {
  var s = $('select#race_distance option:selected').text();
  if (s === 'other') {
    $('#other_distance').parent().show();
  } else {
    $('#other_distance').parent().hide();
  }
});

