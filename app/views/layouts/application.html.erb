<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" 
   "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html>
<head>
    <title>how'd i do</title>
    <%= stylesheet_link_tag 'application' %>
    <% if protect_against_forgery? %>
      <script type='text/javascript'>
        //<![CDATA[
          window._auth_token_name = "#{request_forgery_protection_token}";
          window._auth_token = "#{form_authenticity_token}";
        //]]>
        </script>
    <% end %>
    <%= javascript_include_tag 'application', 'jquery-ui-1.8.5.custom.min', 'lavalamp', 'jquery.easing.1.3', 'jquery.validate', 'jquery.tooltip', 'highcharts', 'gray', 'raphael', 'gauge' %>
</head>

<body>
  
    <!-- hidden elements -->
    <div id="register_form" style="display:none;"></div>
    <div id="participation_form" style="display:none;"></div>
    <div id="notice" style="display:none;"><%= flash[:notice] %></div>

    <div id="user_session">
    <% if session[:user_session] %>
      <%= render(:partial => 'user_sessions/info') %>
    <% else %>
      <%= render(:partial => 'user_sessions/form') %>
    <% end %>
    </div>
        
    <ul id="lavaLamp">
        <li><%= link_to('races', races_path ) %></li>
        <li><%= link_to('users', users_path ) %></li>
    </ul>
    
    <!-- main content -->
    
    <div id="content">
      <% if flash[:notice] %>
        <script type='text/javascript'>
          $('#notice').dialog({ autoOpen: true, width: 500, title: 'read this', modal: true, show: 'fade' });
        </script>
      <% end %>
      
      <%= yield %></div>
    
    <!-- end main content -->
    
    <div id="footer">
        <div id="copyright">
            &copy <%= Date.today.year %> raceweb.ca victoria bc<br>
            all rights reserved<br>
            email: <a href="mailto:info@raceweb.ca">info@raceweb.ca</a></div>
        <div class="clear"></div>
    </div>

</body>
</html>
