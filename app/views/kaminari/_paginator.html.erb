<%= paginator.render do -%>
    <nav>
        <ul class="pagination">
            <%= first_page_tag unless current_page.first? || total_pages < 10 %>
            <%= prev_page_tag unless current_page.first? %>
            <% each_page do |page| -%>
                <% if page.left_outer? || page.right_outer? || page.inside_window? -%>
                    <%= page_tag page %>
                <% elsif !page.was_truncated? -%>
                    <%= gap_tag %>
                <% end -%>
            <% end -%>
            <%= next_page_tag unless current_page.last? %>
            <%= last_page_tag unless current_page.last? || total_pages < 10 %>
        </ul>
    </nav>
<% end -%>
