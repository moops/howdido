<%= form_tag('/user_sessions', :remote => true, :style => 'display:inline') do %>
  <%= label_tag(:user_name, nil, :class => 'inline') %>
  <%= text_field_tag('user_name', '', :size => '15') %>
  <%= label_tag(:password, nil, :class => 'inline') %>
  <%= password_field_tag('password', '', :size => '15') %>
  <%= submit_tag('sign in') %>  
<% end %>