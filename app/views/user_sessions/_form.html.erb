<%= form_tag(user_sessions_path, :id => 'user-session-form') do %>
  <%= label_tag(:email, nil, :class => 'inline') %>
  <%= text_field_tag('email', '', :size => '15') %>
  <%= label_tag(:password, nil, :class => 'inline') %>
  <%= password_field_tag('password', '', :size => '15') %>
  <%= submit_tag('sign in') %>
  <%= link_to('register', new_user_path, :class => 'get') %>
<% end %>